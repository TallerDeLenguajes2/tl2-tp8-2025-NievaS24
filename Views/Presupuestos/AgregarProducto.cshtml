@using tl2_tp8_2025_NievaS24.ViewModels
@model AgregarProductoViewModel

@{
    ViewData[index: "Title"] = "Agregar Producto al Presupuesto";
}

<h2>Agregar Producto al Presupuesto Nro @Model.idPresupuesto</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Presupuestos" asp-action="AgregarProducto" method="post">
            <input type="hidden" asp-for="idPresupuesto" />
            <div class="form-group">
                <label asp-for="idProducto" class="control-label"></label>
                <select asp-for="idProducto" asp-items="@Model.ListaProductos" class="form-control">
                    <option value="">-- Seleccionar Producto --</option>
                </select>
                <span asp-validation-for="idProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-4">AÃ±adir</button>
        </form>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Details" asp-route-id="@Model.idPresupuesto">Volver al Presupuesto</a>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}