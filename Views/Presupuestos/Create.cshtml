@using tl2_tp8_2025_NievaS24.Models;
@using tl2_tp8_2025_NievaS24.ViewModels
@model PresupuestoViewModel

@{
    ViewData[index: "Title"] = "Crear Presupuesto";
}

<form asp-controller="Presupuestos" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="NombreDestinatario" class="control-label"></label>
        <input asp-for="NombreDestinatario" class="form-control" />
        <span asp-validation-for="NombreDestinatario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaCreacion" class="control-label"></label>
        <input type="date" asp-for="FechaCreacion" class="form-control" />
        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-4">Crear</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}