@using tl2_tp8_2025_NievaS24.Models
@model List<Productos>

<h2 class="text-center my-4">Productos</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descripcion</th>
            <th>Precio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Productos p in Model)
        {
            <tr>
                <td>@p.idProducto</td>
                <td>@p.Descripcion</td>
                <td>$@p.Precio</td>
            </tr>
        }
    </tbody>
</table>