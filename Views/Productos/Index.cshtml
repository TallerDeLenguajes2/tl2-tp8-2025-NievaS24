@using tl2_tp8_2025_NievaS24.Models
@model List<Productos>

<h2 class="text-center my-4">Productos</h2>

<div class="text-center mb-4">
    <a class="btn btn-primary btn-lg px-5" asp-controller="Productos" asp-action="Create"> Crear </a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descripcion</th>
            <th>Precio</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Productos p in Model)
        {
            <tr>
                <td>@p.idProducto</td>
                <td>@p.Descripcion</td>
                <td>$@p.Precio</td>
                <td><a asp-controller="Productos" asp-action="Update" asp-route-id="@p.idProducto"
                        class="text-decoration-none">‚úè</a></td>
                <td><a asp-controller="Productos" asp-action="Delete" asp-route-id="@p.idProducto"
                        class="text-decoration-none">üóë</a></td>
            </tr>
        }
    </tbody>
</table>