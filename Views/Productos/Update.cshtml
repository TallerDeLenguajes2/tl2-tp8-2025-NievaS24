@using tl2_tp8_2025_NievaS24.Models;
@model Productos


<form asp-controller="Productos" asp-action="Update" method="post">
    <input hidden asp-for="idProducto">
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-4">Editar</button>
</form>